# OpenRouter Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter API Endpoint
API_URL=https://openrouter.ai/api/v1/chat/completions

# Model Selection (using free tier models)
# Primary model - will be tried first
MODEL_NAME=openai/gpt-oss-20b:free

# Fallback model - will be used if primary model fails
FALLBACK_MODEL_NAME=deepseek/deepseek-r1t-chimera:free

# Optional: HTTP Referer for OpenRouter analytics
# This helps OpenRouter track usage and provide better service
APP_URL=https://github.com/hardikprakash/upskillr
APP_NAME=Upskillr

# Production flag (set to true when deploying to Streamlit Cloud)
PRODUCTION=false
